<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<GridPane fx:controller="Gui.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <stylesheets><URL value="@styles.css" /></stylesheets>

    <!--<gridLinesVisible>true</gridLinesVisible>-->

    <HBox fx:id="scoreboardBox" alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0" >
        <Label fx:id="scores" text="" ></Label>
    </HBox>

    <VBox GridPane.columnIndex="2" GridPane.rowIndex="3" >
        <Label fx:id="cardsLeftLbl" text="Cards left: " />
        <Label fx:id="currentCardLbl" text="Current card: " />
        <Label fx:id="currentChipsLbl" text="Current chips: " />
    </VBox>
    <VBox GridPane.columnIndex="4" GridPane.rowIndex="3" >
        <Button fx:id="takeCardBtn" onAction="#takeCard" text="Take Card" />
        <Button fx:id="tossChipBtn" onAction="#tossChip" text="Toss Chip" />
        <Button fx:id="resetBtn" onAction="#reset" text="Play again!" />
    </VBox>

    <Label fx:id="resultsLbl" text="" GridPane.columnIndex="0" GridPane.columnSpan="5" GridPane.rowIndex="7" />

    <VBox fx:id="currentPlayerBox" alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="5" >
        <Label fx:id="currentPlayerLbl" text="" ></Label>
        <Label fx:id="currentPlayerCards" text="" ></Label>
        <Label fx:id="currentPlayerChips" text="" ></Label>
    </VBox>

    <!--<HBox GridPane.columnIndex="6" GridPane.rowIndex="4">-->
    <ImageView fx:id="deckImg" fitHeight="150.0" fitWidth="200.0" layoutX="4.0" layoutY="73.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="6" GridPane.rowIndex="3"/>
    <ImageView fx:id="activeCardImg" fitHeight="165.0" fitWidth="215.0" layoutX="4.0" layoutY="73.0" pickOnBounds="true" preserveRatio="true" GridPane.valignment="BOTTOM" GridPane.columnIndex="6" GridPane.rowIndex="3"/>
    <!--</HBox>-->


</GridPane>